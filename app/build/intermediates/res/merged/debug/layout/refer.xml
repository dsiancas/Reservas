        <RelativeLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:padding="2dip"
            android:orientation="vertical"
            android:layout_centerHorizontal="true">

            <TextView
                android:id="@+id/textView15"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerHorizontal="true"
                android:layout_gravity="center_horizontal"
                android:fontFamily="sans-serif"
                android:background="@drawable/but"
                android:textColor="#737373"
                android:textSize="28sp"
                android:padding="10dp"
                android:gravity="center"
                android:textStyle="bold"
                android:layout_alignParentTop="true"
                android:layout_marginLeft="5dp"
                android:layout_marginTop="5dp"
                android:layout_marginBottom="5dp"
                android:text="Invita a tus amigos" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="#737373"
                android:gravity="center"
                android:fontFamily="sans-serif"
                android:background="@drawable/but"
                android:id="@+id/textView1"
                android:text="Nombre(s):"
                android:textAppearance="?android:attr/textAppearanceLarge"
                android:padding="10dp"
                android:layout_marginTop="69dp"
                android:textSize="15dp"
                android:layout_below="@+id/textView15"
                android:layout_alignLeft="@+id/textView15" />

            <MultiAutoCompleteTextView

                android:textColor="#737373"
                android:gravity="center"
                android:id="@+id/multiAutoCompleteTextView1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:fontFamily="sans-serif"
                android:background="@drawable/but"
                android:ems="10"
                android:layout_alignTop="@+id/textView1"
                android:layout_alignBottom="@+id/textView1"
                android:layout_alignRight="@+id/textView15"
                android:layout_toRightOf="@+id/textView1">
                <requestFocus />
            </MultiAutoCompleteTextView>

            <Button
                android:textColor="#737373"
                android:padding="10dp"
                android:gravity="center|center_horizontal"
                android:paddingLeft="10dp"
                android:paddingTop="10dp"
                android:paddingRight="10dp"
                android:paddingBottom="10dp"
                android:id="@+id/button1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:fontFamily="sans-serif"
                android:background="@drawable/but"
                android:text="Invitar"
                android:layout_above="@+id/back"
                android:layout_alignLeft="@+id/textView1" />

            <Button
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Salas"
                android:id="@+id/back"
                android:layout_alignParentBottom="true"
                android:layout_alignRight="@+id/multiAutoCompleteTextView1"
                android:background="#ff3661ff"
                android:elegantTextHeight="true"
                android:textColor="#ffe7ffec" />

        </RelativeLayout>
